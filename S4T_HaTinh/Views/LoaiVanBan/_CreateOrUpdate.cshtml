@model S4T_HaTinh.Models.LoaiVanBan

@{
    
}

<div class="divRow">
    <label class="divLabel">Mã loại văn bản</label>
    <div class="divControl">
        @Html.TextBoxFor(model => model.MaLoaiVanBan, new { @class = "S4T_AutoComplete", @style = "width:200px;" })
        @Html.ValidationMessageFor(model => model.MaLoaiVanBan, "", new { @class = "text-danger" })
    </div>
</div>

<div class="divRow">
    <label class="divLabel">Tên loại văn bản</label>
    <div class="divControl">
        @Html.TextBoxFor(model => model.TenLoaiVanBan, new { @class = "S4T_AutoComplete", @style = "width:400px;" })
        @Html.ValidationMessageFor(model => model.TenLoaiVanBan, "", new { @class = "text-danger" })
    </div>
</div>

<div class="divRow">
    <label class="divLabel">Ghi chú</label>
    <div class="divControl">
        @Html.TextAreaFor(model => model.GhiChu, new { @class = "form-control", rows = 10, cols = 70 })
        @Html.ValidationMessageFor(model => model.GhiChu, "", new { @class = "text-danger" })
    </div>
</div>
