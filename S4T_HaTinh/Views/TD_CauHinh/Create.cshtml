@model S4T_HaTinh.Models.TD_CauHinh

@{
    var slUser = new SelectList(ViewBag.ListUser, "Id", "UserName");
}

<h2>TẠO MỚI</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="divRow">
            @Html.LabelFor(model => model.TenCauHinh, htmlAttributes: new { @class = "divLabel" })
            <div class="divControl">
                @Html.EditorFor(model => model.TenCauHinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenCauHinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="divRow">
            @Html.LabelFor(model => model.MaCauHinh, htmlAttributes: new { @class = "divLabel" })
            <div class="divControl">
                @Html.EditorFor(model => model.MaCauHinh, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.MaCauHinh, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="divRow">
            @Html.LabelFor(model => model.NoiDung, htmlAttributes: new { @class = "divLabel" })
            <div class="divControl">
                @Html.EditorFor(model => model.NoiDung, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NoiDung, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="divRow">
            @Html.LabelFor(model => model.User_ID, htmlAttributes: new { @class = "divLabel" })
            <div class="divControl">
                @Html.DropDownListFor(model => model.User_ID, slUser, "(Không có)", new { @class = "S4T_ComboBox" })
                @Html.ValidationMessageFor(model => model.User_ID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="divRow">
            @Html.LabelFor(model => model.IsGlobal, htmlAttributes: new { @class = "divLabel" })
            <div class="divControl">
                @Html.DropDownListFor(model => model.IsGlobal, MvcApplication.SelectListCoKhong(), new { @class = "S4T_DropDownList" })
                @Html.ValidationMessageFor(model => model.IsGlobal, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="divRow">
            <div class="col-md-offset-2 divControl">
                <button type="submit" class="k-button k-button-icontext"><span class="k-icon k-i-tick"></span>Lưu</button>
            </div>
        </div>
    </div>
}
