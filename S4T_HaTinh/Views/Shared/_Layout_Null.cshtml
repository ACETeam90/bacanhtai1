<script type="text/javascript">
    //Open on focus logic (tự động mở Dropdown list khi click vào ô Text)
    $(function () {
        $("[data-role=combobox]").each(function () {
            var widget = $(this).getKendoComboBox();
            widget.input.on("focus", function () {
                widget.open();
            });
        });
    });
</script>
