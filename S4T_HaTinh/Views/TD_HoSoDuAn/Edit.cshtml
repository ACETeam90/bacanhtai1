        if ($("#SoNgayGiaiQuyet").val() != "" && isDate('NgayNhan')) {
            $.post("/TD_HoSoDuAn/AddDateToNgayTra", { "ngayNhan": $("#NgayNhan").val(), "soNgayGiaiQuyet": number }).done(function (data) {
