@model S4T_HaTinh.Models.HaTangNhanLucCNTT

@{
    ViewBag.Title = "Create";
}
<style type="text/css">
    .S4T_NumericTextBox {
        width: 90px;
        float: left;
    }

    table.tableDefault input {
        float: left;
        margin-top: 7px;
        max-width: 200px;
    }
</style>


<h3>HẠ TẦNG NHÂN LỰC CNTT</h3>
<h4>Đơn vị @ViewBag.TenDonVi được tạo mới dữ liệu từ ngày @String.Format("{0:dd/MM/yyyy}", @ViewBag.TuNgay) đến ngày @String.Format("{0:dd/MM/yyyy}", @ViewBag.DenNgay)</h4>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.DonVi_ID)
        @Html.HiddenFor(model => model.Success)
                
        1.Cán bộ chuyên trách CNTT
        <table class="tableDefault">
            <tr>
                <th></th>
                <th>Tiến sỹ</th>
                <th>Thạc sỹ</th>
                <th>Đại học chính quy</th>
                <th>Đại học không chính quy</th>
                <th>Lượt tập huấn/năm</th>
                <th>Số lượng cán bộ đơn vị</th>
            </tr>

            <tr>
                <td>Cơ quan</td>

                <td>
                    @Html.TextBoxFor(model => model.TienSy_DV, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.TienSy_DV, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.ThacSy_DV, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.ThacSy_DV, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.DaiHocChinhQuy_DV, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.DaiHocChinhQuy_DV, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.DaiHocKhongChinhQuy_DV, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.DaiHocKhongChinhQuy_DV, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.LuotTapHuan_DV, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.LuotTapHuan_DV, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.SoLuongCanBo_DV, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.SoLuongCanBo_DV, "", new { @class = "text-danger" })
                </td>
            </tr>

            <tr>
                <td>Đơn vị cấp 2</td>

                <td>
                    @Html.TextBoxFor(model => model.TienSy_DVTT, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.TienSy_DVTT, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.ThacSy_DVTT, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.ThacSy_DVTT, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.DaiHocChinhQuy_DVTT, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.DaiHocChinhQuy_DVTT, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.DaiHocKhongChinhQuy_DVTT, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.DaiHocKhongChinhQuy_DVTT, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.LuotTapHuan_DVTT, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.LuotTapHuan_DVTT, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.SoLuongCanBo_DVTT, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.SoLuongCanBo_DVTT, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>

        2.CBCCVC biết sử dụng thành thạo máy tính
        <table class="tableDefault">
            <tr>
                <th></th>
                <th>Sử dụng thành thạo máy tính</th>
                <th>Lượt tập huấn/năm</th>
            </tr>

            <tr>
                <td>Cơ quan</td>

                <td>
                    @Html.TextBoxFor(model => model.ThanhThaoMayTinh_DV, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.ThanhThaoMayTinh_DV, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.LuotTapHuanThanhThaoMayTinh_DV, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.LuotTapHuanThanhThaoMayTinh_DV, "", new { @class = "text-danger" })
                </td>
            </tr>

            <tr>
                <td>Đơn vị cấp 2</td>

                <td>
                    @Html.TextBoxFor(model => model.ThanhThaoMayTinh_DVTT, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.ThanhThaoMayTinh_DVTT, "", new { @class = "text-danger" })
                </td>

                <td>
                    @Html.TextBoxFor(model => model.LuotTapHuanThanhThaoMayTinh_DVTT, new { @class = "S4T_NumericTextBox" })
                    @Html.ValidationMessageFor(model => model.LuotTapHuanThanhThaoMayTinh_DVTT, "", new { @class = "text-danger" })
                </td>
            </tr>
        </table>        

        <div class="divRow">
            @Html.LabelFor(model => model.TongMucDauTu, htmlAttributes: new { @class = "divLabel" })
            <div class="divControl">
                @Html.TextBoxFor(model => model.TongMucDauTu, new { @class = "S4T_NumericTextBox", @min = "0" })
                @Html.ValidationMessageFor(model => model.TongMucDauTu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="divRow">
            <label class="divLabel" id="lbl"></label>
            <div class="divControl">
                <button type="submit" class="k-button k-button-icontext"><span class="k-icon k-i-tick"></span>Lưu</button>
            </div>
        </div>
    </div>
}
